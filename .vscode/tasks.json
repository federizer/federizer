{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "IAMService:dev",
            "type": "shell",
            "command": "mvn quarkus:dev -Ddebug=5005",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "quarkus",
                    "fileLocation": ["relative", "${workspaceFolder}/IAMService"],
                    "pattern": [
                        {
                            "regexp": "\\[(\\d+)\\]\\s(.*):(\\d+):(\\d+)\\s\\-\\s{(.*)}:\\s(.*)$",
                            "file": 2,
                            "line": 3,
                            "column": 4,
                            "message": 6
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*Scanning for projects...",
						"endsPattern": "(^.*Quarkus .* started in .*\\.)|(^.* ERROR .* Failed to start)"
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}/IAMService"
            }
        },
